<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="view_sub_specie_form">
        <field name="name">insect.sub.specie.form</field>
        <field name="model">insect.sub.specie</field>
        <field name="arch" type="xml">
            <form string="Sub Specie Form">
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                    </group>
                    <group>
                        <field name="super_family_id"/>
                        <field name="family_id"/>
                        <field name="sub_family_id"/>
                        <field name="tribe_id"/>
                        <field name="genus_id"/>
                        <field name="specie_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sub_specie_tree" model="ir.ui.view">
        <field name="name">insect.sub.specie.tree</field>
        <field name="model">insect.sub.specie</field>
        <field name="arch" type="xml">
            <tree string="Sub Specie Tree" import="false">
                <field name="name"/>
                <field name="super_family_id"/>
                <field name="family_id"/>
                <field name="sub_family_id"/>
                <field name="tribe_id"/>
                <field name="specie_id"/>
            </tree>
        </field>
    </record>

</odoo>
